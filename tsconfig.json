{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./",
    "allowJs": true,
    "checkJs": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": false,
    "types": ["node"],
    "lib": ["ESNext"],
    "isolatedModules": true,
    "resolveJsonModule": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "strictFunctionTypes": true,
    "exactOptionalPropertyTypes": false,
    "noImplicitAny": false,
    "useUnknownInCatchVariables": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@sypher": ["./source/sypher"],
      "@sy-utils": ["./source/controls/utils"],
      "@sy-log": ["./source/controls/plugins/logger"],
      "@sy-core": [".source/controls/*"],
      "@sy-listener": ["./source/controls/listener/listener.ts"],
      "@sy-handler": ["./source/controls/listener/handler/*"],
      "@sy-login": ["./source/controls/logger/botlogger.ts"],
      "@sy-database": ["./sypher/resources/database/database.ts"]
    }
  },
  "include": ["**/*.js", "**/*.ts"],
  "exclude": ["node_modules", "dist"]
}